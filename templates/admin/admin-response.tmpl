<!DOCTYPE html>
<html>
    <head>
        {{ template "head.tmpl" . }}
        <link rel="stylesheet" href="//cdn.datatables.net/1.10.13/css/dataTables.bootstrap.min.css">
        <link rel="stylesheet" href="/static/css/datatables-custom.css">
        <style media="screen">
            .dataTables_wrapper table thead{
                display:none;
            }
            table.dataTable {
                border-collapse: collapse !important;
            }
        </style>


        <title>Admin</title>
    </head>
    <body>
        {{ template "admin-navbar.tmpl" . }}

        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-xl-12">
                    <div class="panel panel-default">
                        <div class="panel-heading clearfix">
                            Responses
                            <button class="btn btn-primary btn-xs pull-right" data-toggle="modal" data-target="#responseModal">Add</button>
                        </div>
                        <table id="responses" class="table table-bordered table-hover" width="100%">
                            <thead>
                                <tr id="search">
                                    <th>r</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {{ range $response := .responses }}
                                    <tr class="clickable">
                                        <td>{{ $response.R }}</td>
                                        <td class="text-center"><button class="btn btn-primary btn-xs responseEdit" data-response="{{ toBase64Json $response }}">Edit</button></td>
                                    </tr>
                                {{ end }}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

