<!DOCTYPE html>
<html>
    <head>
        {{ template "head.tmpl" . }}
        <link rel="stylesheet" href="//cdn.datatables.net/1.10.13/css/dataTables.bootstrap.min.css">
        <link rel="stylesheet" href="/static/css/datatables-custom.css">

        <title>Admin</title>
    </head>
    <body>
        {{ template "admin-navbar.tmpl" . }}

        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-xl-12">
                    <div class="panel panel-default">
                        <div class="panel-heading clearfix">
                            Elements
                            <button class="btn btn-primary btn-xs pull-right" data-toggle="modal" data-target="#elementModal">Add</button>
                        </div>
                        <table id="elements" class="table table-bordered table-hover" width="100%">
                            <thead>
                                <tr id="search">
                                    <th>name</th>
                                    <th>Description</th>
                                    <th></th>
                                </tr>
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {{ range $element := .elements }}
                                    <tr class="clickable" data-url="/admin/element/{{ $element.Id }}/area">
                                        <td>{{ $element.Name }}</td>
                                        <td>{{ $element.Description }}</td>
                                        <td class="text-center">
                                            <button class="btn btn-primary btn-xs elementEdit" data-element="{{ toBase64Json $element }}">Edit</button>
                                            <a class="btn btn-danger btn-xs confirm-action" data-message="Are you sure you would like to delete this supply chain element?" data-color="#ff0000" data-url="/admin/element/del/{{ $element.Id }}" data-type="warning">Delete</a>
                                        </td>
                                    </tr>
                                {{ end }}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        {{ template "scripts.tmpl" . }}
        {{ template "element-form.tmpl" . }}

        <script src="//cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js" charset="utf-8"></script>
        <script src="//cdn.datatables.net/1.10.13/js/dataTables.bootstrap.min.js" charset="utf-8"></script>
        <script src="/static/js/datatables-custom.js" charset="utf-8"></script>

        <script type="text/javascript">
            var table = $('#element').DataTable({
                "lengthMenu": [5, 10, 15, 20],
                "pageLength": 10,
                "columnDefs": [
                    { "orderable": false,    "targets": [1,2] },
                    { "name": "name",        "targets": 0 },
                    { "name": "description", "targets": 1 }
                ]
            });

            confirm.yes = function(btn) {
                $('<form method="post" action="' + btn.attr('data-url') + '"></form>').appendTo('body').submit();
            }
        </script>

    </body>
</html>
